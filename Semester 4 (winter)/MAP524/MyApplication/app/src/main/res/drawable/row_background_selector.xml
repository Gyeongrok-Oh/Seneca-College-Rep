<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@android:color/white" />

    <item android:state_activated="true" android:drawable="@color/yellow" />

    <item android:state_activated="false" android:drawable="@color/light_red" />

    <item android:state_selected="true" android:drawable="@color/light_green" />

    <item android:state_pressed="true" android:drawable="@color/mid_green" />

    <item android:state_checked="true" android:drawable="@color/dark_green" />

    <item android:state_hovered="true" android:drawable="@color/red" />
</selector>
